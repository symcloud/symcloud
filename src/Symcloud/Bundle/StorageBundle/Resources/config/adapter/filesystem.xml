<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="symcloud_storage.riak.factory" class="Riak\Client\RiakClientBuilder">
            <call method="withNodeUri">
                <argument type="string">http://localhost:8098</argument>
            </call>
        </service>
        <service id="symcloud_storage.riak" class="Riak\Client\RiakClient"
                 factory-service="symcloud_storage.riak.factory" factory-method="build"/>

        <service id="symcloud_storage.adapter.blob" class="Symcloud\Filesystem\FilesystemBlobAdapter">
            <argument type="string">%kernel.root_dir%/data/symcloud</argument>
        </service>
        <service id="symcloud_storage.adapter.blob_file" class="Symcloud\Filesystem\FilesystemBlobFileAdapter">
            <argument type="string">%kernel.root_dir%/data/symcloud</argument>
        </service>
        <service id="symcloud_storage.adapter.metadata" class="Symcloud\Filesystem\FilesystemMetadataAdapter">
            <argument type="string">%kernel.root_dir%/data/symcloud</argument>
        </service>
    </services>
</container>
