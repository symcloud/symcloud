<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="symcloud_storage.metadata-storage.tree-manager" class="Symcloud\Component\MetadataStorage\Tree\TreeManager">
            <argument type="service" id="symcloud_storage.riak.adapter.metadata"/>
            <argument type="service" id="symcloud_storage.blob-storage.blob-file-manager"/>
            <argument type="service" id="sulu_security.user_repository"/>
            <argument type="service" id="symcloud_storage.factory"/>
        </service>
        <service id="symcloud_storage.metadata-storage.commit-manager" class="Symcloud\Component\MetadataStorage\Commit\CommitManager">
            <argument type="service" id="symcloud_storage.factory"/>
            <argument type="service" id="symcloud_storage.riak.adapter.metadata"/>
            <argument type="service" id="sulu_security.user_repository"/>
            <argument type="service" id="symcloud_storage.metadata-storage.tree-manager"/>
        </service>
        <service id="symcloud_storage.metadata-storage.reference-manager" class="Symcloud\Component\MetadataStorage\Reference\ReferenceManager">
            <argument type="service" id="symcloud_storage.riak.adapter.metadata"/>
            <argument type="service" id="symcloud_storage.metadata-storage.commit-manager"/>
            <argument type="service" id="sulu_security.user_repository"/>
            <argument type="service" id="symcloud_storage.factory"/>
        </service>
    </services>
</container>
